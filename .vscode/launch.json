    "version": "0.2.0",
    "configurations": [

        {   
            "name": "Launch via npm",
            "type": "node",
            "request": "launch",
            "remoteRoot": "${workspaceFolder}",
            "localRoot": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debug"]
        },
        
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "remoteRoot": "${workspaceFolder}",
            "localRoot": "${workspaceFolder}"
        }
    ]
}